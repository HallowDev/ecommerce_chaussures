{% extends 'customer/base.html.twig' %}

{% block body %}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100 imageCarousel" src="https://images.unsplash.com/photo-1576491110919-df70d852860f?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8NXx8c2hvZSUyMHNob3B8ZW58MHx8MHx8&auto=format&fit=crop&w=500&q=60" alt="Nike Dunk Low">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100 imageCarousel" src="https://images.unsplash.com/photo-1567958528086-8d8324137918?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTB8fHNob2UlMjBzaG9wfGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=500&q=60" alt="Nike Dunk Low Bordeaux">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100 imageCarousel" src="https://images.unsplash.com/photo-1635855374289-b6ca7fe114ab?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MjB8fHNob2UlMjBzaG9wfGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=500&q=60" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

 <section class="bg-secondary">
    <div class="container py-5">
    <div class="row">
          <div class="col-12">
            <h3 class="text-center text-white">Les catégories</h3>
          </div>  

          {% for category in categories %}

              <div class="col-sm-12 col-md-6 col-lg-4 mt-3 cat">

                  <div class="card">
                      <img src="{{ category.image }}" class="card-img-top imageCard" alt="image_category">
                      <div class="card-body">
                          <h5 class="card-title">{{ category.name }}</h5>
                          <a href="{{ path('boutique_product_show_by_category',{'id':category.id}) }}" class="btn btn-primary w-100">Consulter</a>
                      </div>
                  </div>
          
              </div>
              
          {% endfor %}

      </div>
    </div>
  </section>

  <section>
  <div class="container py-5">
      <div class="row">
        <div class="col-12">
          <h3 class="text-center">Les nouveautés</h3>
        </div>  

        {% for product in products %}

            <div class="col-sm-12 col-md-6 col-lg-4 mt-3">

                <div class="card">
                    <img src="{{ product.image }}" class="card-img-top imageCard" alt="image_category">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p>{{ product.price | priceEuro }}</p>
                        <a href="{{ path('boutique_product_detail',{'id':product.id}) }}" class="btn btn-primary w-100">Consulter</a>
                    </div>
                </div>
        
            </div>
            
        {% endfor %}

    </div>
     </div>
  </section>

{% endblock %}
