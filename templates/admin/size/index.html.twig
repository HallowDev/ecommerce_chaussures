{% extends 'admin/base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <div class="container py-5">

        <div class="row">
            
            {% include "_messages_flash.html.twig" %}

            <div class="col-12 d-flex align-items-center justify-content-between">
                <h3>Liste des catégories</h3>
                <a class="btn btn-primary" href="{{ path('admin_size_new') }}">Ajouter</a>
            
            </div>

            {% for size in sizes %}

            <div class="col-sm-12 col-md-6 col-lg-4">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ size.size }}</h5>
                        <a href="{{ path('admin_size_edit',{'id' : size.id }) }}" class="btn btn-primary w-100">Gérer</a>
                    </div>
                </div>
                
            </div>

            {% endfor %}

        </div>

    </div>

{% endblock %}
